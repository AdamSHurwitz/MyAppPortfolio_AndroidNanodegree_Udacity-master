<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#A1887F">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SPOTIFY STREAMER"
        android:drawableLeft="@drawable/spotify_icon"
        android:id="@+id/button"
        android:layout_marginTop="27dp"
        android:background ="#0288D1"
        android:padding="10dp"
        android:textColor="#E0F2F1"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:onClick="showSpotifyStreamerApp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SCORES APP"
        android:drawableLeft="@drawable/scores_icon"
        android:id="@+id/button2"
        android:layout_marginTop="20dp"
        android:background ="#0288D1"
        android:padding="10dp"
        android:textColor="#E0F2F1"
        android:layout_below="@+id/button"
        android:layout_centerHorizontal="true"
        android:onClick="showScoresApp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LIBRARY APP"
        android:drawableLeft="@drawable/library_icon"
        android:id="@+id/button3"
        android:layout_marginTop="20dp"
        android:background ="#0288D1"
        android:padding="10dp"
        android:textColor="#E0F2F1"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true"
        android:onClick="showLibraryApp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BUILD IT BIGGER"
        android:drawableLeft="@drawable/bigger_icon"
        android:id="@+id/button4"
        android:background ="#0288D1"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:textColor="#E0F2F1"
        android:layout_below="@+id/button3"
        android:layout_centerHorizontal="true"
        android:onClick="showBuildItBiggerApp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XYZ READER"
        android:drawableLeft="@drawable/xyzreader_icon"
        android:id="@+id/button5"
        android:layout_marginTop="20dp"
        android:background ="#0288D1"
        android:padding="10dp"
        android:textColor="#E0F2F1"
        android:layout_below="@+id/button4"
        android:layout_centerHorizontal="true"
        android:onClick="showXYZReaderApp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CAPSTONE: MY OWN APP"
        android:drawableLeft="@drawable/capstone_icon"
        android:id="@+id/button6"
        android:layout_marginTop="20dp"
        android:background="#EF9A9A"
        android:padding="20dp"
        android:textColor="#212121"
        android:textStyle="bold"
        android:layout_below="@+id/button5"
        android:layout_centerHorizontal="true"
        android:onClick="showCapstoneApp" />
</RelativeLayout>
